<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- User info section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_label"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/not_logged_in"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Count section -->
    <LinearLayout
        android:id="@+id/count_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <!-- Counts on the left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pillar count -->
            <TextView
                android:id="@+id/countPillarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_pillar_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/pillars_count" />

            <!-- FBM count -->
            <TextView
                android:id="@+id/countFbmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_fbm_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/fbm_count" />

            <!-- Passive count -->
            <TextView
                android:id="@+id/countPassiveText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_passive_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/passive_count" />

            <!-- Intersected count -->
            <TextView
                android:id="@+id/countIntersectedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_intersected_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/intersected_count" />

            <!-- Unsynced count -->
            <TextView
                android:id="@+id/countUnsyncedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_refresh_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/unsynced_count" />

            <!-- Photos count -->
            <TextView
                android:id="@+id/countPhotosText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_camera_large"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/photos_count" />

        </LinearLayout>

        <!-- User map on the right -->
        <ImageView
            android:id="@+id/userMapImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:background="#f0f0f0"
            android:contentDescription="@string/user_activity_map"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Top row: Nearest and Map buttons side by side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/btnNearest"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/nearest_button"
                android:textSize="16sp"
                android:layout_marginEnd="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary" />

            <Button
                android:id="@+id/btnLeafletMap"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/map_button"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorOnPrimary" />

        </LinearLayout>

        <!-- AR View button - available to all users -->
        <Button
            android:id="@+id/btnARView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/arView"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary" />

        <!-- Bottom row: Sync button -->
        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="@string/sync_button"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary" />

    </LinearLayout>

</LinearLayout>
