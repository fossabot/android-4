<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Removed legacy storage permissions in favor of Photo Picker / SAF -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Camera is optional - only needed for AR View feature -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    
    <!-- Photo picker permissions - Android 13+ photo picker requires NO permissions! -->
    <!-- Only needed for Android 10 and below when using ACTION_GET_CONTENT -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="29" /> <!-- Only for Android 10 (API 29) and below -->
    
    <!-- Photo access handled via Android Photo Picker (no runtime storage permissions) -->

    <application 
        android:icon="@drawable/icon" 
        android:label="@string/app_name" 
        android:name="uk.trigpointing.android.MainApplication"
        android:allowBackup="true"
        android:theme="@style/Theme.TrigpointingUK"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true">
        <!-- Ensure Crashlytics is enabled in all builds unless overridden -->
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />
        
        <!-- Auth0 configuration -->
        <meta-data
            android:name="com.auth0.android.auto_verify"
            android:value="false" />
        <meta-data
            android:name="com.auth0.android.auto_verify_connection"
            android:value="false" />
        

        
        <activity android:name="uk.trigpointing.android.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Auth0 RedirectActivity to handle the authentication callback -->
        <activity
            android:name="com.auth0.android.provider.RedirectActivity"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="${auth0Scheme}"
                    android:host="${auth0Domain}"
                    android:pathPrefix="/android/${applicationId}/callback" />
            </intent-filter>
            <!-- Also handle the release package callback to support debug builds using release-style redirect URI -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="${auth0Scheme}"
                    android:host="${auth0Domain}"
                    android:pathPrefix="/android/uk.trigpointing.android/callback" />
            </intent-filter>
        </activity>
        <activity 
            android:name="uk.trigpointing.android.nearest.NearestActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.DownloadTrigsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="uk.trigpointing.android.MainActivity" />
        <activity 
            android:name=".SettingsActivity" >
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AcknowledgementsActivity"
            android:label="@string/acknowledgements"
            android:parentActivityName=".AboutActivity" />

        <activity
            android:name="com.mikepenz.aboutlibraries.ui.LibsActivity"
            android:theme="@style/AboutLibrariesTheme" />

        <activity
            android:name=".mapping.DownloadMapsActivity"
            android:label="@string/title_activity_download_maps"
            android:parentActivityName=".mapping.LeafletMapActivity" />
        <activity 
            android:name="uk.trigpointing.android.trigdetails.TrigDetailsActivity"
            android:label="@string/trigdetails_name"
            android:parentActivityName="uk.trigpointing.android.MainActivity" />
        <activity 
            android:name="uk.trigpointing.android.trigdetails.TrigDetailsAlbumTab"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.trigdetails.TrigDetailsInfoTab"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.trigdetails.TrigDetailsLoglistTab"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.trigdetails.TrigDetailsOSMapTab"
            android:exported="false" />



        <activity 
            android:name="uk.trigpointing.android.mapping.LeafletMapActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.common.WebViewActivity"
            android:exported="false" />

        <activity
            android:name="uk.trigpointing.android.compass.CompassActivity"
            android:exported="false" />
        <meta-data android:value="6668b1358f29457b88baf287a692ae97" android:name="CLOUDMADE_KEY"></meta-data>
        <meta-data android:value="AmX-6eFz_aE2rrhkXUprU3HRV2BNMrCYQoKodIFdfNEcZosjAEbsNetB00GFktP5" android:name="BING_KEY"></meta-data>

        <activity 
            android:name="uk.trigpointing.android.common.DisplayBitmapActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.logging.LogTrigActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity 
            android:name="uk.trigpointing.android.logging.LogPhotoActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.filter.FilterActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.filter.TrigpointTypesActivity"
            android:exported="false" />
        <activity 
            android:name="uk.trigpointing.android.filter.FilterFoundActivity"
            android:exported="false" />

        <activity
            android:name="uk.trigpointing.android.ar.SensorARActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            <!-- AR View intentionally locked to portrait for optimal camera experience -->
    </application>
</manifest>